<!DOCTYPE html>
<html lang="en">
  <head>
   <%- include('./partials/head') %>
    <title>Blog</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <image src="<%= blog.coverImage %>" width="600px" height="400px" class="mt-3"></image>
        <p class="mt-3"><%= blog.body %></p>

        <div class="container mt-4">
          
        <img src="<%= blog.createdBy.profileImageUrl %>" width="60px" height="40px" > <%= blog.createdBy.fullName %>
      
        </div>
    </div>

    <% if(locals.comments){ %>
      <div class="container mt-4">
        <h2>Comments(<%= comments.length %>)</h2>
        <form action="/blog/comment/<%= blog._id %>" method="post">
          <div class="mb-3">
            <textarea type="text" class="form-control" placeholder="Enter your comment..."  name="content"></textarea>
              <button type="submit" class="btn btn-primary mt-3">Submit</button>
          </div>
          </form>
          <% comments.forEach(comment => { %>
            <img src="<%= comment.createdBy.profileImageUrl %>" width="50px"  > <%= comment.createdBy.fullName %>  <p><%= comment.content %></p>
        
          <% }) %>
          
      </div>
    <% } else{ %>  
      <div class="container mt-4">
        <h2>Comments(<%= comments.length %>)</h2>
        <form action="/blog/comment/<%= blog._id %>" method="post">
          <div class="mb-3">
            <textarea type="text" class="form-control" placeholder="Enter your comment..."  name="content"></textarea>
              <button type="submit" class="btn btn-primary mt-3">Submit</button>
          </div>
          </form>
          </div>
   <% } %>
   
    <%- include('./partials/scripts') %>
  </body>
</html>